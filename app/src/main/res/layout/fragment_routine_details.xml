<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="40dp"
        android:layout_width="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout0"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="247dp"
            android:layout_height="28dp"
            android:text="@string/tv_app_title"
            android:textColor="#010101"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="56dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_open_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_settings"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/ic_menu" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout0">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_welcome_user"
            android:textColor="#010101"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="247dp"
            android:layout_height="28dp"
            android:textColor="#010101"
            android:textSize="21sp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_welcome"
            app:layout_constraintTop_toTopOf="@+id/tv_welcome" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">
        <TextView
            android:id="@+id/domingo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUN"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/segunda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MON"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@+id/domingo"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />
        <TextView
            android:id="@+id/terca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TUE"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@+id/segunda"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />
        <TextView
            android:id="@+id/quarta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WED"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@+id/terca"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"/>
        <TextView
            android:id="@+id/quinta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THUR"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/quarta"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />
        <TextView
            android:id="@+id/sexta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRI"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@+id/quinta"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />
        <TextView
            android:id="@+id/sabado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAT"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@+id/sexta"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/cl_cl_no_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_no_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_no_class_selected"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:textSize="17sp"
            android:lineHeight="20dp"
            android:textColor="@color/dark_grey_text"/>
        <TextView
            android:id="@+id/tv_open_imdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tv_contact_admin"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            android:textSize="13sp"
            android:lineHeight="17dp"
            android:gravity="top|center"
            android:textColor="@color/grey_text"/>
    </LinearLayout>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_imdfs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>